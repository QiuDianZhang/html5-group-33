.form-container { padding: 30rpx; padding-bottom: 100rpx; }

.cover-upload { width: 200rpx; height: 280rpx; background: #f0f0f0; margin: 0 auto 40rpx; border-radius: 12rpx; overflow: hidden; display: flex; justify-content: center; align-items: center; border: 2rpx dashed #ccc; position: relative;}
.cover-img { width: 100%; height: 100%; }
.upload-placeholder { display: flex; flex-direction: column; align-items: center; color: #999; }
.plus { font-size: 60rpx; line-height: 60rpx; font-weight: 200; }

.form-item { margin-bottom: 40rpx; }
.form-row { display: flex; justify-content: space-between; gap: 20rpx; }
.half { flex: 1; }

.label { display: block; font-size: 28rpx; color: #333; margin-bottom: 15rpx; font-weight: bold; }
.required { color: #ff4d4f; margin-left: 8rpx; }

.input { border: 1rpx solid #ddd; padding: 20rpx; border-radius: 8rpx; font-size: 28rpx; background: #f9f9f9; }

.radio-group { display: flex; gap: 30rpx; }
.radio { font-size: 28rpx; }

.vertical .label { margin-bottom: 20rpx; }
.textarea { width: 100%; border: 1rpx solid #ddd; padding: 20rpx; border-radius: 8rpx; background: #f9f9f9; height: 200rpx; box-sizing: border-box; font-size: 28rpx; }

.word-count { text-align: right; font-size: 22rpx; color: #999; margin-top: 10rpx; }

.save-btn { background: #07c160; color: #fff; margin-top: 60rpx; border-radius: 50rpx; }
.star-rating {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.star-item {
  padding: 10rpx;
}

.star-icon {
  font-size: 50rpx; /* 星星大小 */
  color: #ddd;
  transition: color 0.2s;
}

.star-icon.active {
  color: #ffc107;   /* 选中后的金黄色 */
}

.rating-text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666;
}