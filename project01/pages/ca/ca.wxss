.container { padding: 30rpx; background: #fff; min-height: 100vh; }

.header { margin-bottom: 40rpx; }
.month-selector { display: flex; justify-content: center; align-items: center; margin-bottom: 20rpx; }
.arrow { font-size: 40rpx; color: #07c160; padding: 0 40rpx; }
.current-date { font-size: 34rpx; font-weight: bold; }

.heatmap-legend { display: flex; justify-content: flex-end; align-items: center; font-size: 20rpx; color: #999; gap: 8rpx; }
.level { width: 20rpx; height: 20rpx; border-radius: 4rpx; }
.l0 { background: #eee; }
.l1 { background: #d9f7be; }
.l2 { background: #73d13d; }
.l3 { background: #237804; }

.calendar-board { background: #fff; }
.week-header { display: flex; margin-bottom: 10rpx; }
.week-item { flex: 1; text-align: center; font-size: 24rpx; color: #999; }

.days-grid { display: flex; flex-wrap: wrap; }
.day-cell { width: 14.28%; height: 100rpx; padding: 6rpx; box-sizing: border-box; }

.day-content { width: 100%; height: 100%; border-radius: 8rpx; background: #f6f6f6; display: flex; flex-direction: column; align-items: center; justify-content: center; position: relative;}
.day-num { font-size: 28rpx; color: #333; font-weight: bold;}
.day-count { font-size: 18rpx; margin-top: 4rpx; color: #555; }

/* 热力图颜色 */
.level-1 { background-color: #d9f7be; color: #000; }
.level-2 { background-color: #73d13d; color: #fff; }
.level-3 { background-color: #237804; color: #fff; }
.level-2 .day-num, .level-3 .day-num, .level-2 .day-count, .level-3 .day-count { color: #fff; }

.summary { margin-top: 40rpx; text-align: center; font-size: 28rpx; color: #666; background: #f9f9f9; padding: 20rpx; border-radius: 12rpx;}