.container { padding: 30rpx; background: #f6f6f6; min-height: 100vh; }
.card { background: #fff; padding: 40rpx; border-radius: 16rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05); }

/* 详情头部 */
.header-section { display: flex; margin-bottom: 30rpx; }
.detail-cover { width: 180rpx; height: 240rpx; border-radius: 8rpx; background: #eee; margin-right: 30rpx; box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1); flex-shrink: 0;}
.header-info { flex: 1; display: flex; flex-direction: column; justify-content: space-around; }
.title { font-size: 36rpx; font-weight: bold; line-height: 1.4; }
.tags-row { display: flex; gap: 10rpx; }
.status-badge { font-size: 24rpx; background: #eee; padding: 4rpx 12rpx; border-radius: 8rpx; color: #666; }
.status-want { background: #e6f7ff; color: #1890ff; }
.status-reading { background: #fff7e6; color: #fa8c16; }
.status-read { background: #f6ffed; color: #52c41a; }
.category-badge { font-size: 24rpx; background: #f0f0f0; padding: 4rpx 12rpx; border-radius: 8rpx; color: #666; }
.author { font-size: 28rpx; color: #666; }
.rating-row { font-size: 28rpx; color: #666; }

/* 进度条 */
.progress-section { margin-top: 20rpx; background: #f9f9f9; padding: 20rpx; border-radius: 8rpx; }
.progress-info { display: flex; justify-content: space-between; font-size: 24rpx; color: #666; margin-bottom: 10rpx; }

.divider { height: 1rpx; background: #eee; margin: 30rpx 0; }

.section-title { font-size: 30rpx; font-weight: bold; margin-bottom: 20rpx; display: block; border-left: 8rpx solid #07c160; padding-left: 15rpx;}
.notes-content { font-size: 28rpx; color: #333; line-height: 1.6; background: #f9f9f9; padding: 20rpx; border-radius: 8rpx; min-height: 150rpx; white-space: pre-wrap; }
.time { font-size: 24rpx; color: #ccc; margin-top: 30rpx; text-align: right; }

.action-area { margin-top: 60rpx; display: flex; gap: 30rpx; }
.btn { flex: 1; border-radius: 50rpx; font-size: 30rpx; }
.edit { background: #fff; border: 1rpx solid #07c160; color: #07c160; }
.delete { background: #fff; border: 1rpx solid #ff4d4f; color: #ff4d4f; }

.static-stars {
  display: inline-flex;
  align-items: center;
}

.star-icon-small {
  font-size: 32rpx;
  color: #e0e0e0;
  margin-right: 4rpx;
}

.star-icon-small.active {
  color: #ffc107;
}

.rating-value-text {
  font-size: 26rpx;
  color: #999;
  margin-left: 10rpx;
}