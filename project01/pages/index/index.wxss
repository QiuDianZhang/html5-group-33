.container { padding: 30rpx; background: #f6f6f6; min-height: 100vh; }

.timer-card { 
  background: #fff; 
  padding: 30rpx; 
  border-radius: 30rpx; 
  margin-bottom: 30rpx; 
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05); 
  text-align: center; 
  transition: all 0.3s; 
}

.timing-active { background: #e6f7ff; border: 1rpx solid #91d5ff; }

.timer-title { font-size: 24rpx; color: #666; margin-bottom: 10rpx; display: block; }
.timer-display { font-size: 60rpx; font-weight: bold; color: #333; font-family: monospace; margin: 20rpx 0; }
.timing-active .timer-display { color: #1890ff; }

.timer-btn { border-radius: 40rpx; font-size: 30rpx; font-weight: bold; width: 80%; }
.btn-start { background: #07c160; color: #fff; }
.btn-stop { background: #ff4d4f; color: #fff; }

.action-bar { display: flex; align-items: center; gap: 20rpx; margin-bottom: 20rpx; }

.search-bar { flex: 1; background: #fff; padding: 15rpx 20rpx; border-radius: 30rpx; display: flex; align-items: center; }
.search-bar input { flex: 1; font-size: 28rpx; margin: 0 15rpx; }

.icon-btn { width: 70rpx; height: 70rpx; background: #fff; border-radius: 50%; display: flex; justify-content: center; align-items: center; font-size: 36rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05); }
.setting-btn { color: #666; }

.calendar-entry { background: #fff; padding: 24rpx 30rpx; border-radius: 12rpx; margin-bottom: 20rpx; display: flex; justify-content: space-between; align-items: center; border: 1rpx solid #eee; }
.entry-title { font-size: 30rpx; font-weight: bold; color: #333; display: block;}
.entry-desc { font-size: 22rpx; color: #999; margin-top: 4rpx; }
.entry-arrow { color: #ccc; }

/* 统计与列表样式保持不变 */
.tabs { display: flex; background: #fff; padding: 20rpx; border-radius: 12rpx; margin-bottom: 20rpx; }
.tab { flex: 1; text-align: center; font-size: 28rpx; color: #666; padding-bottom: 10rpx; }
.tab.active { color: #07c160; border-bottom: 4rpx solid #07c160; font-weight: bold; }

.book-list { height: calc(100vh - 580rpx); } /* 调整高度以适应计时器 */
.book-item { background: #fff; padding: 20rpx; margin-bottom: 20rpx; border-radius: 12rpx; display: flex; align-items: flex-start; }
.book-cover { width: 120rpx; height: 160rpx; border-radius: 8rpx; background: #eee; margin-right: 20rpx; flex-shrink: 0; }
.info { flex: 1; display: flex; flex-direction: column; justify-content: space-between; min-height: 160rpx; }
.info-top { display: flex; justify-content: space-between; align-items: flex-start; }
.title { font-size: 30rpx; font-weight: bold; margin-bottom: 6rpx; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;}
.author { font-size: 24rpx; color: #666; display: block; }
.category { font-size: 20rpx; color: #999; background: #f0f0f0; padding: 2rpx 8rpx; border-radius: 4rpx; width: fit-content; margin-top: 10rpx;}
.status-tag { font-size: 22rpx; padding: 4rpx 12rpx; border-radius: 8rpx; flex-shrink: 0; margin-left: 10rpx;}
.status-want { background: #e6f7ff; color: #1890ff; }
.status-reading { background: #fff7e6; color: #fa8c16; }
.status-read { background: #f6ffed; color: #52c41a; }
.empty-tip { text-align: center; color: #999; margin-top: 100rpx; }
.add-btn { position: fixed; right: 40rpx; bottom: 60rpx; width: 100rpx; height: 100rpx; background: #07c160; color: #fff; border-radius: 50%; text-align: center; line-height: 90rpx; font-size: 60rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2); z-index: 100;}